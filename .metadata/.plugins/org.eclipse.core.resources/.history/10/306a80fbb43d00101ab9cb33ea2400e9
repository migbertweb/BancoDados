-- SELECT Consulta de dados:
-- Selecione todos os produtos cadastrados.
select * from produtos order by nome

-- Selecione apenas os nomes e preços dos produtos.
select nome,preco from produtos order by nome 

-- Selecione os produtos da categoria 'Notebook'.
SELECT nome, preco, estoque
FROM produtos
WHERE categoria="Notebooks";

-- Mostre os produtos com preço maior que R$ 2.000,00.
SELECT nome, preco, estoque
FROM produtos
WHERE preco>2000.00;


-- ORDER BY – Ordenação de resultados
-- Liste todos os produtos ordenados por nome em ordem alfabética.
select * from produtos order by nome

-- Liste os produtos ordenados pelo preço do mais barato para o mais caro.
select nome, preco, estoque from produtos order by preco

-- Liste os produtos ordenados pelo estoque do maior para o menor.
select nome, preco, estoque from produtos order by estoque DESC;


